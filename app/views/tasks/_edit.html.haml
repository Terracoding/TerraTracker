.modal.hide.fade.in{:id => "task_edit_#{@task.id}"}
  .modal-header
    %button.close{ "data-dismiss" => "modal" } &times;
    %h1 Create Task
  = simple_form_for(@task, :url => @task, :html => {:class => 'form-horizontal' }) do |f|
    .modal-body
      = f.input :project_id, :required => true, :collection => @available_projects, :selected => @available_projects[0], :include_blank => false, :label => 'Project'
      = f.input :name, :required => true, :autofocus => true, :class => 'input-xlarge', :label => 'Task Name'
      = f.input :billable
      = f.input :rate, :wrapper => :prepend do
        = content_tag :span, "Â£", :class => "add-on"
        = f.text_field :rate
    .modal-footer
      = f.button :submit, "Update", :class => 'btn btn-primary'
      %a{ :href => "#", :class => "btn", "data-dismiss" => "modal" } Close
:javascript
  if ($('#project-errors').length > 0) {
    $("#project-edit").modal('toggle');
  }