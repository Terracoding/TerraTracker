- content_for(:title, 'Tasks')
.row
  .span2
    .area= render :partial => "shared/sidebar"
  .span9
    .area#tasks
      %h1 Tasks
      = render :partial => "tasks/tasks"
      %p
        - if !current_user.sub_account
          = link_to new_task_path, :remote => true, :class => "btn btn-primary" do
            %i.icon-plus.icon-white
            Add Task